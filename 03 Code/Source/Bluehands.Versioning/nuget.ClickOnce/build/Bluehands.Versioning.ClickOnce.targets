<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="AfterCompile" Condition="'$(UseAssemblyVersionForClickOnce)' == 'True'">
    <GetAssemblyIdentity AssemblyFiles="$(IntermediateOutputPath)$(TargetFileName)">
      <Output TaskParameter="Assemblies" ItemName="TargetAssemblyIdentity" />
    </GetAssemblyIdentity>
    <PropertyGroup>
      <AssemblyVersion>%(TargetAssemblyIdentity.Version)</AssemblyVersion>
      <!-- for normal applications -->
      <ApplicationVersion>$(AssemblyVersion)</ApplicationVersion>
      <!-- for Office VSTO addins -->
      <PublishVersion>$(AssemblyVersion)</PublishVersion>
    </PropertyGroup>
  </Target>
</Project>
